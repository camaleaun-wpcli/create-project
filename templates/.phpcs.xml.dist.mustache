<?xml version="1.0"?>
<ruleset name="{{title}}">
	<description>Custom ruleset for {{title}}</description>

	<!--
	#############################################################################
	COMMAND LINE ARGUMENTS
	For help understanding this file: https://github.com/squizlabs/PHP_CodeSniffer/wiki/Annotated-ruleset.xml
	For help using PHPCS: https://github.com/squizlabs/PHP_CodeSniffer/wiki/Usage
	#############################################################################
	-->

	<!-- What to scan. -->
	<file>./bin/command.php</file>

	<!-- Example for scan theme. -->
	<!-- <file>./wp-content/themes/starter-theme</file> -->
	{{#theme}}
	<file>./wp-content/themes/{{slug}}</file>
	{{/theme}}

	<!-- Example for scan plugin. -->
	<!-- <file>./wp-content/plugins/sample-plugin</file> -->
	{{#plugin}}
	<file>./wp-content/plugins/{{slug}}</file>
	{{/plugin}}

	<!-- Show progress and sniff codes in all reports -->
	<arg value="sp"/>

	<!-- Strip the filepaths down to the relevant bit. -->
	<arg name="basepath" value="./"/>

	<!-- Check up to 8 files simultanously. -->
	<arg name="parallel" value="8"/>

	<!--
	#############################################################################
	USE THE WordPress RULESET
	#############################################################################
	-->

	<rule ref="WordPress"/>

	<!--
	#############################################################################
	PROJECT SPECIFIC CONFIGURATION FOR SNIFFS
	#############################################################################
	-->

	<!--
	#############################################################################
	SELECTIVE EXCLUSIONS
	#############################################################################
	-->

	<!-- Exclude some rules for WP-CLI command. -->
	<rule ref="WordPress.Files.FileName.InvalidClassFileName">
		<exclude-pattern>*/bin/command\.php$</exclude-pattern>
	</rule>
	<rule ref="Squiz.Commenting">
		<exclude-pattern>*/bin/command\.php$</exclude-pattern>
	</rule>
	<rule ref="Generic.Commenting">
		<exclude-pattern>*/bin/command\.php$</exclude-pattern>
	</rule>
	<rule ref="WordPress.WP.AlternativeFunctions.file_get_contents_file_get_contents">
		<exclude-pattern>*/bin/command\.php$</exclude-pattern>
	</rule>
	<rule ref="WordPress.PHP.DiscouragedPHPFunctions.runtime_configuration_putenv">
		<exclude-pattern>*/bin/command\.php$</exclude-pattern>
	</rule>

</ruleset>
